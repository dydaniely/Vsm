<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/subTitle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="@string/EditChildrenVaccinated"
                android:layout_gravity="center"
                android:layout_weight="0.07"
                android:textColor="@color/SubTitle"
               android:layout_centerVertical="true"
            android:textSize="@dimen/TitleFont" />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="left|center_vertical">

        <EditText
                android:id="@+id/nEditLessThanOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/lessthanoneyear"
                android:inputType="number" android:padding="10dp" android:layout_marginBottom="10dp"/>

        <EditText
                android:id="@+id/nEditGreaterThanOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/greaterthanoneyear"
                android:inputType="number" android:padding="10dp" android:layout_marginBottom="10dp"/>

    </LinearLayout>

</LinearLayout>