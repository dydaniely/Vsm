<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/scrollView"
             android:layout_gravity="left|center_vertical" android:measureAllChildren="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:orientation="vertical">

        <TextView
                android:id="@+id/Label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:text="@string/EditReportSetting"
                android:textAlignment="center"
                android:textColor="#AA66CC"
                android:textSize="@dimen/TitleFont" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ReportSettingMedia"
                android:id="@+id/textView"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>

        <EditText
                android:id="@+id/nReportingMedia"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="fill_horizontal"
                android:hint="@string/ReportSettingMedia"
                android:inputType="text"
                android:lines="1"
                android:selectAllOnFocus="true"></EditText>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ReportSettingPhone"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/textView2"/>

        <EditText
                android:id="@+id/nReportPhone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="fill_horizontal"
                android:hint="@string/ReportSettingPhone"
                android:inputType="text"
                android:lines="1"
                android:selectAllOnFocus="true"></EditText>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ReportSettingUrl"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/textView3"/>

        <EditText
                android:id="@+id/nReportingUrl"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="fill_horizontal"
                android:hint="@string/ReportSettingUrl"
                android:inputType="number"
                android:lines="1"
                android:selectAllOnFocus="true"

                >

        </EditText>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ReportPeriod"
                android:id="@+id/textView4"/>

        <EditText
                android:id="@+id/nReportingPeriod"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="fill_horizontal"
                android:hint="@string/ReportPeriod"
                android:inputType="number"
                android:lines="1"
                android:selectAllOnFocus="true">



        </EditText>
    </LinearLayout>
</ScrollView>