<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/subTitle"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#AA66CC"
                android:textSize="@dimen/TitleFont"
                android:layout_gravity="center"
                android:focusable="false"
                android:textIsSelectable="false"/>
    </LinearLayout>
    <ListView
            android:id="@+id/childrenListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:clickable="true"
            android:focusable="false"/>

    <TextView
            android:id="@+id/nVaccinationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:text="@string/VaccinationDate"
            android:textColor="@color/background_1"
            android:textSize="@dimen/TextSize"
            android:textStyle="bold" />
    <TextView
            android:id="@+id/nAgeLessThanOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:inputType="number"
            android:text="@string/AgeLessThanOne"
            android:textColor="@color/background_1"
            android:textSize="@dimen/TextSize"
            android:textStyle="normal" />

    <TextView
            android:id="@+id/nAgeGreaterThanOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/AgeGreaterThanOne"
            android:textColor="@color/background_1"
            android:textStyle="normal"
            android:clickable="false"
            android:focusable="false"
            android:textSize="@dimen/TextSize" />

</LinearLayout>   	  
    