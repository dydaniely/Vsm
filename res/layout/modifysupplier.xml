<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/supplierName" android:textColor="@color/SubTitle"
        android:layout_centerVertical="true"
        android:id="@+id/Label"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/nEditSupplierName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:gravity="fill_horizontal"
            android:hint="@string/supplierName"
            android:inputType="text"
            android:lines="1"
            android:selectAllOnFocus="true" >


        </EditText>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/supplierDescription"
        android:id="@+id/Label"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/nEditDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:gravity="left"
            android:hint="@string/supplierDescription"
            android:inputType="text"
            android:lines="1"
            android:selectAllOnFocus="true"
            >

        </EditText>
    </LinearLayout>

</LinearLayout>